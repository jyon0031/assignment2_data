{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "year",
      "value": 2005,
      "bind": {
        "input": "range",
        "min": 2005,
        "max": 2020,
        "step": 1,
        "name": "Year:"
      }
    }
  ],
  "vconcat": [
    {
      "title": "Internet Users (%) by Country",
      "width": 650,
      "height": 400,
        "data": {
    "url": "https://raw.githubusercontent.com/jyon0031/assignment2_data/main/Internet_stat_clean.csv"
  },
  "transform": [
    {
      "lookup": "Entity",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "key": "properties.NAME",
        "fields": ["properties", "type", "geometry"]
      }
    },
    {"filter": "datum.Year==year"}
  ],
  "projection": {"type": "equirectangular"},
  "layer": [
    {
      "mark": "geoshape",
      "encoding": {
        "color": {"field": "Percentage", "type": "quantitative"},
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country: "},
          {
            "field": "Percentage",
            "type": "quantitative",
            "title": "Population(%) with internet access: "
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "stroke": "black",
        "strokeWidth": 0.2,
        "fill": "violet",
        "fontWeight": "bold",
        "fontSize": 17
      },
      "transform": [{"filter": "datum.Rank==1"}],
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "text": {"field": "Entity", "type": "nominal"},
        "size": {"value": 11},
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country: "},
          {
            "field": "Percentage",
            "type": "quantitative",
            "title": "Population(%) with internet access: "
          }
        ]
      }
    }
  ]
},
    {
      "title": "GDP vs. Internet Users Percentage by Region",
      "width": 800,
      "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/jyon0031/assignment2_data/main/Internet_stat_clean.csv"
  },
  "transform": [
    {"filter": "datum.Year == year"},
    {"filter": "datum.GDP > 0"},
    {"filter": "datum.Percentage > 0"}
  ],

  "mark": "circle",
  "encoding": {
    "x": {"field": "GDP", 
          "type": "quantitative", 
          "title": "GDP",
          "scale": {"type": "log"},
          "axis": {"grid": false} 
           },
    "y": {
      "field": "Percentage",
      "type": "quantitative",
      "title": "Percentage of Internet Users"
    },
    "color": {
      "field": "region",
      "type": "nominal",
      "legend": {"title": "Region"}
    },
    "tooltip": [
      {"field": "Entity", "type": "nominal"},
      {"field": "Year", "type": "ordinal"},
      {"field": "GDP", "type": "quantitative"},
      {"field": "Percentage", "type": "quantitative"}
    ]
  }
}
  ],
  "config": {"title": {"font": "sans-serif", "fontSize": 15}}
}
